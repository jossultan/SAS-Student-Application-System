<div class="form-group col-md-8 " style="margin: auto;margin-bottom: 300px;">
<h3 style="margin-top: 30px;">{{viewTitle}}</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Programme Name</th>
            <th>Closing Date</th>
            <th>Applications</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td><a href="/uniadmin/listapplicant/{{this.programmeId}}">{{this.programmeName}}</a></td>
            <td>{{this.closingDate}}</td>
            <td>{{this.applicantNumber}}</td>
            <td>
                <a href="/uniadmin/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/uniadmin/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

