<div class="form-group col-md-8 " style="margin: auto;margin-bottom: 300px;">
<h3 style="margin-top: 30px;">{{viewTitle}}</h3>
{{# if success}}
<form action="/applicant/qualification" method="POST" autocomplete="off">
    <div class="form-group">
        <label>Qualification</label>
        <br>
        <select name="qualification">
            {{#each list}}
            <option value="{{this._id}}">{{this.qualificationName}}</option>
            {{/each}}
        </select>
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Record Score</button>
    </div>
</form>

<div class="form-group">
    <p>Qualification are not listed?</p>
    <button type="submit" class="btn btn-secondary"><i class="fa fa-database"></i> Click Here</button>
</div>

