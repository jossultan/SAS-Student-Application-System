<div class="form-group col-md-6 " style="margin: auto;margin-bottom: 300px;">
<h3 style="margin-top: 30px;">{{viewTitle}}</h3>

<h2>{{admin.universityName}}</h2>

<form action="/sasadmin/addUniAdmin/{{ID}}" method="POST" autocomplete="off">
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" name="userName" placeholder="user name">
        <div class="text-danger">
            {{admin.userNameError}}</div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" name="password" placeholder="password">
        <div class="text-danger">
            {{admin.passwordError}}</div>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="name">
        <div class="text-danger">
            {{admin.nameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="email">
        <div class="text-danger">
            {{admin.emailError}}</div>
    </div>
    <button type="submit" class="btn btn-info" id="submit"><i class="fa fa-database"></i> Submit</button>
</form>

</div>

